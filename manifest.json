{
  "manifest_version": 3,
  "name": "NovaPet",
  "version": "1.0",
  "description": "NovaPet 登入與選擇角色介面",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.firebaseio.com/",
    "https://*.googleapis.com/"
  ]
}
