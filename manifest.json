{
  "manifest_version": 3,
  "name": "NovaPet - Virtual Dog Walker",
  "version": "1.0",
  "description": "NovaPet 虛擬寵物狗，可在桌面移動並與 OpenAI 對話",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.firebaseio.com/",
    "https://*.googleapis.com/",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/dog.gif", "images/dogHouse.png", "images/dogHouseWithDog.png"],
      "matches": ["<all_urls>"]
    }
  ]
}